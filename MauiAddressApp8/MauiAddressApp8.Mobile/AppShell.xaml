<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAddressApp8.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAddressApp8.Mobile"
    Shell.TabBarIsVisible="False"
    Shell.BackgroundColor="Navy"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White"
    Title="MauiAddressApp8.Mobile">

    <Shell.FlyoutHeader>
        <StackLayout Padding="10">
            
        </StackLayout>
    </Shell.FlyoutHeader>
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Addresses"
            ContentTemplate="{DataTemplate local:AddressListPage}"
            Route="AddressListPage" />
    </FlyoutItem>
    <Shell.FlyoutFooter>
        <StackLayout Padding="10">
            <Button Text="Logout" Clicked="OnLoginClicked" />
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
